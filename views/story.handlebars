<div class="card m-5 p-3 shadow-lg">
  <div class="card-body">
    <h3 class="card-title text-center text-primary"><strong>{{name}}</strong></h3>
    <h5 class="card-subtitle text-center mb-2 text-primary">Written by {{user.name}} on {{format_date date_created}}
    </h5>
    <p class="card-text fs-5 text-secondary">{{description}}</p>
  </div>
  <!-- This is how I want final-update-form to look like -->
  <form id="final-update-form">
    <div class="card m-3 p-3 shadow-sm">
      <div class="card-body">
        <div class="mb-3">
          <label for="update-title" class="form-label text-secondary">
            <strong>Update My Struggle Title</strong></label>
          <input type="text" class="form-control" id="update-title" placeholder="Update to this Title Here">
        </div>
        <div class="mb-3">
          <label for="update-story" class="form-label text-secondary">
            <strong>Update My Funny Coding Mistakes</strong>
          </label>
          <input type="text" class="form-control" id="update-story" placeholder="Update to this Story Here">
        </div>
        <button class="bg-primary text-white" id="update-button" data-id="{{story.id}}">Update My Story</button>
      </div>
    </div>
  </form>
</div>
<script src="/js/story.js"></script>